{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
                <form class="form" action="{{ path("fos_user_security_check") }}" method="post">
                    <br/>
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                    
                        <label for="username">Email</label>
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                        <br/>
                        <label for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="_password" required="required" />
                        <div class="ep-20">
                            <input class="btn btn-success col-xs-12" type="submit" id="_submit" name="_submit" value="{{ 'Submit'|trans }}" />
                        </div>
                    <br/>
                    <br/>
                    </form>
        </div>
    </div>
</div>

